<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    tools:context=".fragments.AdminHomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">
        <include layout="@layout/fragment_admin_home_card"/>
    </LinearLayout>

    <!--android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_exit_to_app_black_24dp"
        android:tint="@color/colorWhite" /-->

    <com.github.clans.fab.FloatingActionMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:menu_colorNormal="@color/colorAccent"
        app:menu_icon="@drawable/ic_change_history_black_24dp"
        android:id="@+id/floatingActionMenu"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        app:menu_showShadow="true"
        app:menu_backgroundColor="@android:color/transparent"
        app:menu_openDirection="up">
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/exit_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_visibility_off_black_24dp"
            app:fab_colorNormal="@color/colorAccent"
            app:fab_label="Modo Kiosko"
            app:fab_size="normal"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/exit_mode_admi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/colorAccent"
            android:src="@drawable/ic_exit_to_app_black_24dp"
            app:fab_label="Salir de la app"
            app:fab_size="normal"/>
    </com.github.clans.fab.FloatingActionMenu>



</FrameLayout>